{
  "manifest_version": 2,

  "name": "Biscuit",
  "description": "This extension scrapes youtube links from a web page and creates a link that will combine these videos into a playlist.",
  "version": "0.1.2",

  "browser_action": {
    "default_icon": "the_doge_t.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "the_doge_t.png",
    "48": "the_doge_t.png",
    "128": "the_doge_t.png"
  },
  "permissions": [
    "activeTab",
    "background"
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
